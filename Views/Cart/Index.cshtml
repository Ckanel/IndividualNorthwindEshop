@model List<IndividualNorthwindEshop.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shopping Cart</h2>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@($"{item.Product.UnitPrice:C}")</td>
                    <td>
                        <form asp-controller="Cart" asp-action="UpdateCartQuantity" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" />
                            <button type="submit">Update</button>
                        </form>
                    </td>
                    <td>@($"{item.Product.UnitPrice * item.Quantity:C}")</td>
                    <td>
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="cart-total">
        Total: @($"{Model.Sum(item => item.Product.UnitPrice * item.Quantity):C}")
    </div>



    <a asp-controller="Checkout" asp-action="Index">Proceed to Checkout</a>


}
else
{
    <p>Your cart is empty.</p>
}

