@model Order

@{
    ViewData["Title"] = "Update Order Quantities";
}

<h2>Update Order Quantities</h2>
<form asp-action="UpdateOrderQuantities" asp-route-id="@Model.OrderId" method="post">
    <input type="hidden" asp-for="OrderId" />
    
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Current Quantity</th>
                <th>New Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderDetail in Model.OrderDetails)
            {
                <tr>
                    <td>@orderDetail.Product.ProductName</td>
                    <td>@orderDetail.Quantity</td>
                    <td>
                        <input type="hidden" asp-for="@orderDetail.ProductId" />
                        <input type="number" asp-for="@orderDetail.Quantity" min="1" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Quantities</button>
        <a asp-action="HandleOrder" asp-route-id="@Model.OrderId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

