@model IEnumerable<CommonData.Models.Shipper>

@{
    ViewData["Title"] = "Shippers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <h2 class="text-center my-4">Shippers</h2>
    @if (User.IsInRole("Employee") || User.IsInRole("Manager"))
    {
        <div class="text-right mb-3">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    }
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ShipperId" class="btn btn-sm btn-warning" >Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ShipperId" class="btn btn-sm btn-info" >Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ShipperId" class="btn btn-sm btn-danger" >Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


