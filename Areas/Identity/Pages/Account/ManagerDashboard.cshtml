@page
@model IndividualNorthwindEshop.Areas.Identity.Pages.Account.ManagerDashboardModel
@{
    ViewData["Title"] = "Manager Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .is-invalid {
            border-color: #e3342f;
        }

        .invalid-feedback {
            display: none;
            width: 100%;
            margin-top: .25rem;
            font-size: .875em;
            color: #e3342f;
        }

        .is-invalid + .invalid-feedback {
            display: block;
        }
    </style>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto p-5">
        <h2 class="text-3xl font-semibold text-center mb-5 text-gray-800">Manager Dashboard</h2>

        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h3 class="text-2xl font-semibold mb-4 text-gray-700">Register a New Employee/Manager</h3>

            <form id="registerForm" method="post" class="space-y-4 needs-validation" novalidate autocomplete="off">
                <div>
                    <label for="Email" class="block text-gray-700 text-sm font-bold mb-2">Email:</label>
                    <input type="email" id="Email" name="Email" autocomplete="off" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">Invalid Email Address</div>
                </div>
                <div>
                    <label for="Password" class="block text-gray-700 text-sm font-bold mb-2">Password:</label>
                    <input type="password" id="Password" name="Password" required autocomplete="new-password" pattern=".{6,100}" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">The password must be at least 6 and at most 100 characters long.</div>
                </div>
                <div>
                    <label for="Role" class="block text-gray-700 text-sm font-bold mb-2">Role:</label>
                    <select id="Role" name="Role" required class="block appearance-none w-full bg-white border border-gray-300 hover:border-gray-400 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                        <option value="Employee">Employee</option>
                        <option value="Manager">Manager</option>
                    </select>
                    <div class="invalid-feedback">Role is required</div>
                </div>
                <div>
                    <label for="FirstName" class="block text-gray-700 text-sm font-bold mb-2">First Name:</label>
                    <input type="text" id="FirstName" name="FirstName" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">First Name is required</div>
                </div>
                <div>
                    <label for="LastName" class="block text-gray-700 text-sm font-bold mb-2">Last Name:</label>
                    <input type="text" id="LastName" name="LastName" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">Last Name is required</div>
                </div>
                <div>
                    <label for="Address" class="block text-gray-700 text-sm font-bold mb-2">Address:</label>
                    <input type="text" id="Address" name="Address" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">Address is required</div>
                </div>
                <div>
                    <label for="City" class="block text-gray-700 text-sm font-bold mb-2">City:</label>
                    <input type="text" id="City" name="City" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">City is required</div>
                </div>
                <div>
                    <label for="Region" class="block text-gray-700 text-sm font-bold mb-2">Region:</label>
                    <input type="text" id="Region" name="Region" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">Region cannot be longer than 50 characters</div>
                </div>
                <div>
                    <label for="PostalCode" class="block text-gray-700 text-sm font-bold mb-2">Postal Code:</label>
                    <input type="text" id="PostalCode" name="PostalCode" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">Postal Code is required</div>
                </div>
                <div>
                    <label for="Country" class="block text-gray-700 text-sm font-bold mb-2">Country:</label>
                    <input type="text" id="Country" name="Country" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">Country is required</div>
                </div>
                <div>
                    <label for="Phone" class="block text-gray-700 text-sm font-bold mb-2">Phone:</label>
                    <input type="tel" id="Phone" name="Phone" required pattern="\d{10,15}" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <div class="invalid-feedback">Invalid Phone Number</div>
                </div>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">Register</button>
            </form>
        </div>
    </div>

    <!-- Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">Registration Failed</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul id="errorList">
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var form = document.getElementById('registerForm');
            form.reset(); // Clear any prefilled data

            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);

            // Show the modal if there are server-side errors
        @if (!ViewData.ModelState.IsValid)
        {
            <text>
                    $(document).ready(function () {
                        $('#errorModal').modal('show');
                        var errorList = $("#errorList");
                @foreach (var item in ViewData.ModelState)
                {
                    foreach (var error in item.Value.Errors)
                    {
                        <text>
                                    errorList.append("<li>@error.ErrorMessage</li>");
                        </text>
                    }
                }
                                });
            </text>
        }
                });
    </script>
</body>

</html>

