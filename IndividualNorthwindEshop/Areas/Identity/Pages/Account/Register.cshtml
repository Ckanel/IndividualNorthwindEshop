@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Create a new account</h4>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-group">
                            <label>Are you a business or a customer?</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="userType" id="businessRadio" value="business">
                                <label class="form-check-label" for="businessRadio">Business</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="userType" id="customerRadio" value="customer">
                                <label class="form-check-label" for="customerRadio">Customer</label>
                            </div>
                        </div>

                        <div id="inputFields" style="display: none;">
                            <div class="form-group">
                                <label asp-for="Input.Email">Email</label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password">Password</label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Address">Address</label>
                                <input asp-for="Input.Address" class="form-control" aria-required="true" placeholder="Address" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.City">City</label>
                                <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.PostalCode">Postal Code</label>
                                <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="Postal Code" />
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Country">Country</label>
                                <input asp-for="Input.Country" class="form-control" aria-required="true" placeholder="Country" />
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Phone">Phone</label>
                                <input asp-for="Input.Phone" class="form-control" aria-required="true" placeholder="Phone" />
                                <span asp-validation-for="Input.Phone" class="text-danger"></span>
                            </div>

                            <div id="businessFields" style="display: none;">
                                <div class="form-group">
                                    <label asp-for="Input.CompanyName">Company Name</label>
                                    <input asp-for="Input.CompanyName" class="form-control" aria-required="true" placeholder="Company Name" />
                                    <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ContactName">Contact Name</label>
                                    <input asp-for="Input.ContactName" class="form-control" aria-required="true" placeholder="Contact Name" />
                                    <span asp-validation-for="Input.ContactName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ContactTitle">Contact Title</label>
                                    <input asp-for="Input.ContactTitle" class="form-control" aria-required="true" placeholder="Contact Title" />
                                    <span asp-validation-for="Input.ContactTitle" class="text-danger"></span>
                                </div>
                            </div>

                            <div id="customerFields" style="display: none;">
                                <div class="form-group">
                                    <label asp-for="Input.FirstName">First Name</label>
                                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="First Name" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.LastName">Last Name</label>
                                    <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Last Name" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('input[name="userType"]').change(function () {
                var userType = $(this).val();
                if (userType === 'business') {
                    $('#inputFields').show();
                    $('#businessFields').show();
                    $('#customerFields').hide();
                } else if (userType === 'customer') {
                    $('#inputFields').show();
                    $('#businessFields').hide();
                    $('#customerFields').show();
                }
            });
        });
    </script>
}







